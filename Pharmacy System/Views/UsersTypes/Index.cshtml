@model IEnumerable<Pharmacy_System.Models.UsersType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<h2>User Types</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Add New User Type</a>
</p>
<table class="table">
    <thead>
        <tr class="tableTopBackColor tblHeadingCenter">
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                    <a class="btn btn-info ListActionBtn" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-success listDetailsbtn ListActionBtn" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger ListActionBtn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
