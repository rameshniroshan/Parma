@model IEnumerable<Pharmacy_System.Models.Medicines>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<h2>List Medicines</h2>
<hr />
<p>
    <a asp-action="Create" asp-controller="Medicines" class="btn btn-success">Add New Medicine</a>
</p>
<div class="border border-warning1 p-0 horizontalscroll dvListMedicines">
<table class="table" id="tblListMedicines">
    <thead>
            <tr class="tableTopBackColor tblHeadingCenter">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DosageForm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReorderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerUnit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DosageForm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReorderLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerUnit)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MedicineID" class="btn btn-info ListActionBtn">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.MedicineID" class="btn btn-success listDetailsbtn ListActionBtn">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.MedicineID" class="btn btn-danger ListActionBtn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>